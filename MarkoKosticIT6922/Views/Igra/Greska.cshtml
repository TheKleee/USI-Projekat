@model MarkoKosticIT6922.Models.Greska
@{
    ViewData["Title"] = "Greska";
}

<div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 50vh;">
    @if (Model.Resenje != null)
    {
        <h2 class="mb-4">@Model.Resenje.Opis</h2>
    }

    <form asp-action="Greska" method="post">

        <input type="hidden" asp-for="ResenjeId" />
        <input type="hidden" asp-for="KorisnikId" />

        <div class="form-group">
            <label asp-for="Opis" class="control-label"></label>
            <input asp-for="Opis" class="form-control" />
            <span asp-validation-for="Opis" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success mb-3 align-items-center justify-content-center" style="width: 200px; height: 50px; font-size: 16px;">
                Potvrdi
            </button>

            <a class="btn btn-primary mb-3 align-items-center justify-content-center" style="width: 200px; height: 50px; font-size: 16px;"
               asp-action="Test" asp-route-id="@Model.ResenjeId">Nazad</a>
        </div>
    </form>
</div>